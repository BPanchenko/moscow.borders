{
	"name": "rocks.protosite.russia-map",
	"description": "Russia Site",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"main": "index.html",
	"homepage": "http://russia-map.protosite.rocks",
	"license": "ISC",
	"scripts": {
		"build": "set NODE_ENV=production&& run-s build:js build:css build:html",
		"build:css": "postcss ./design/main.css --output ./assets/design.css --config ./.config/postcss.config.cjs --verbose",
		"build:html": "posthtml --config ./.config/posthtml.config.cjs",
		"build:js": "rollup --config .config/rollup.config.js",
		"dev": "set NODE_ENV=development&& run-p watch:js watch:css start:server",
		"start:server": "node server.mjs",
		"watch:css": "postcss ./design/main.css --output ./assets/design.css --config ./.config/postcss.config.cjs --watch --verbose",
		"watch:js": "rollup --config .config/rollup.config.js -w",
		"watch:html": "onchange -v *.html assets/design.css -e assets/*.html -- npm run build:html"
	},
	"devDependencies": {
		"@bpanchenko/uikit": "3.5.13",
		"@rollup/plugin-commonjs": "23.0.2",
		"@rollup/plugin-node-resolve": "15.0.1",
		"cssnano": "5.1.13",
		"cssnano-preset-default": "5.2.12",
		"d3": "7.6.1",
		"express": "4.18.2",
		"htmlnano": "2.0.2",
		"livereload": "0.9.3",
		"lodash": "4.17.21",
		"npm-run-all": "4.1.5",
		"onchange": "7.1.0",
		"port-authority": "2.0.1",
		"postcss": "8.4.18",
		"postcss-cli": "10.0.0",
		"postcss-custom-media": "8.0.2",
		"postcss-import": "15.0.0",
		"postcss-nested": "6.0.0",
		"posthtml": "0.16.6",
		"posthtml-beautify": "0.7.0",
		"posthtml-cli": "0.10.0",
		"posthtml-inline-svg": "0.2.0",
		"posthtml-match-helper": "1.0.3",
		"posthtml-noopener": "1.0.5",
		"protosite-core": "1.3.6",
		"protosite-palette": "2.9.14",
		"purgecss": "4.1.3",
		"rollup": "2.79.1",
		"rollup-plugin-terser": "7.0.2"
	},
	"author": {
		"name": "Boris Panchenko",
		"email": "boris.v.panchenko@mail.ru",
		"url": "https://bpanchenko.ru"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/BPanchenko/rocks.protosite.russia-map.git"
	}
}
