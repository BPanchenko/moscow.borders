{
	"name": "moscow.borders",
	"description": "Russia Border Site",
	"version": "0.4.10",
	"private": true,
	"type": "module",
	"main": "index.html",
	"homepage": "https://borders.moscow",
	"license": "ISC",
	"scripts": {
		"build": "set NODE_ENV=production&& run-s build:js build:css build:html",
		"build:css": "postcss ./design/main.css --output ./assets/design.css --config ./.config/postcss.config.cjs --verbose",
		"build:html": "posthtml --config ./.config/posthtml.config.cjs",
		"build:js": "rollup --config .config/rollup.config.cjs",
		"dev": "set NODE_ENV=development&& run-p watch:js watch:css start:server",
		"geo": "run-s geo:regions geo:country",
		"geo:country": "node scripts/unite-regions.mjs",
		"geo:regions": "node scripts/concat-regions.mjs",
		"start:server": "node scripts/server.mjs",
		"watch:css": "npm run build:css -- --watch --verbose",
		"watch:html": "onchange -v *.html assets/design.css -e assets/*.html -- npm run build:html",
		"watch:js": "npm run build:js -- --watch"
	},
	"devDependencies": {
		"@bpanchenko/uikit": "4.15.38",
		"@rollup/plugin-node-resolve": "15.0.1",
		"@turf/turf": "6.5.0",
		"cssnano": "5.1.14",
		"cssnano-preset-default": "5.2.13",
		"d3": "7.8.0",
		"express": "4.18.2",
		"htmlnano": "2.0.3",
		"livereload": "0.9.3",
		"lodash": "4.17.21",
		"npm-run-all": "4.1.5",
		"onchange": "7.1.0",
		"port-authority": "2.0.1",
		"postcss": "8.4.20",
		"postcss-cli": "10.1.0",
		"posthtml": "0.16.6",
		"posthtml-beautify": "0.7.0",
		"posthtml-cli": "0.10.0",
		"posthtml-inline-svg": "0.2.0",
		"posthtml-match-helper": "1.0.3",
		"posthtml-noopener": "1.0.5",
		"protosite-core": "1.3.6",
		"protosite-palette": "2.13.20",
		"purgecss": "5.0.0",
		"rollup": "2.79.1",
		"rollup-plugin-terser": "7.0.2"
	},
	"author": {
		"name": "Boris Panchenko",
		"email": "boris.v.panchenko@mail.ru",
		"url": "https://bpanchenko.ru"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/BPanchenko/moscow.borders.git"
	}
}
